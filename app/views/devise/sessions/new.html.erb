<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Log in</h3>
  </div>
  <div class="panel-body">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group">
        <%= f.label :email %>
        <%= f.email_field :email, class: 'form-control', required: true, autofocus: true %>
      </div>

      <div class="form-group">
        <%= f.label :password %>
        <%= f.password_field :password, class: 'form-control', required: true, autocomplete: 'off' %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="form-group">
          <div class="checkbox-inline">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
          <% if devise_mapping.recoverable? -%>
            <%= link_to "Forgot your password?", new_password_path(resource_name), class: 'pull-right' %>
          <% end -%>
        </div>
      <% end -%>

      <div class="devise-form-actions col-md-8 col-md-offset-2">
        <%= f.submit 'Log in', class: 'btn btn-primary btn-block' %>
      </div>
    <% end %>
  </div>
</div>

<div class="text-center text-muted">
  <p>Don't have an account yet? <%= link_to "Sign up", new_registration_path(resource_name) %></p>
</div>
