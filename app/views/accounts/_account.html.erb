<tr>
  <td><%= account.name %></td>
  <td><%= account.kind %></td>
  <td><%= formatted_currency(account.balance, account.currency) %></td>
  <td>
    <%= link_to 'Edit', edit_account_path(account), class: 'btn btn-default btn-sm' %>
    <%= link_to 'Delete',
                account,
                method: :delete,
                class: 'btn btn-danger btn-sm',
                data: { confirm: 'Are you sure you want to delete this account?' } %>
  </td>
</tr>
