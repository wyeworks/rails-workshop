<%= form_for(account) do |f| %>
  <div class="panel panel-default">
    <div class="panel-body">
      <% account.errors.full_messages.each do |message| %>
        <div class="alert alert-danger"><%= message %></div>
      <% end %>

      <div class="form-group">
        <%= f.label :kind, 'Account type' %>
        <%= f.select :kind, account_kind_options, {}, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control', required: true %>
      </div>
      <div class="form-group">
        <%= f.label :balance %>
        <div class="row">
          <div class="col-md-6 col-xs-6">
            <%= f.number_field :balance, class: 'form-control', required: true, step: 0.01 %>
          </div>
          <div class="col-md-6 col-xs-6">
            <%= f.label :currency, class: 'sr-only' %>
            <%= f.select :currency, currency_options, {}, class: 'form-control' %>
          </div>
        </div>
      </div>
    </div>

    <div class="panel-footer text-right">
      <%= link_to 'Cancel', accounts_path, class: 'btn btn-default' %>
      <%= f.submit class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
